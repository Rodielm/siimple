{
    "name": "siimple-repo",
    "version": "4.2.3",
    "private": true,
    "description": "A minimal and themeable CSS toolkit for flat and clean designs.",
    "author": "Josemi Juanes <josemi@siimple.xyz>",
    "type": "module",
    "license": "MIT",
    "homepage": "https://www.siimple.xyz/",
    "repository": "https://github.com/jmjuanes/siimple",
    "bugs": "https://github.com/jmjuanes/siimple/issues",
    "workspaces": [
        "packages/*",
        "website/*"
    ],
    "scripts": {
        "build": "yarn run build:css && yarn run build:icons",
        "build:css": "gulp css",
        "build:icons": "gulp icons:sprite",
        "build:landing": "yarn workspace siimple-landing build",
        "build:docs": "yarn workspace siimple-docs build",
        "build:playground": "yarn workspace siimple-playground build",
        "build:website": "yarn build:landing && yarn build:docs && yarn build:playground",
        "prebuild:website": "rm -rf ./public",
        "postbuild:website": "cp -R ./website/landing/public ./public && cp -R ./website/docs/public ./public/docs && cp -R ./website/playground/public ./public/playground",
        "serve": "stattic --folder ./public --port 5000",
        "serve:landing": "stattic --folder ./website/landing/public --port 5000",
        "serve:docs": "yarn workspace siimple-docs serve",
        "test": "jest"
    },
    "devDependencies": {
        "@babel/core": "^7.18.13",
        "@babel/plugin-transform-react-jsx": "^7.18.10",
        "@babel/plugin-transform-runtime": "^7.18.10",
        "@babel/preset-env": "^7.18.10",
        "@babel/preset-react": "^7.18.6",
        "@testing-library/react": "^13.3.0",
        "autoprefixer": "^10.3.5",
        "babel-jest": "^29.0.1",
        "clean-css": "^5.2.4",
        "gulp": "^4.0.2",
        "gulp-cli": "^2.3.0",
        "gulp-postcss": "^9.0.1",
        "gulp-rename": "^2.0.0",
        "jest": "^29.0.1",
        "jest-environment-jsdom": "^29.0.1",
        "postcss": "^8.4.14",
        "react": "^17.0.2",
        "react-test-renderer": "^17.0.2",
        "stattic": "^0.4.0"
    }
}
