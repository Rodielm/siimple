{
    "hosting": {
        "target": "website",
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            ".env"
        ],
        "redirects": [
            {
                "source": "/getting-started",
                "destination": "/docs/"
            },
            {
                "source": "/configuration",
                "destination": "/docs/configuration"
            },
            {
                "source": "/colors",
                "destination": "/docs/colors"
            },
            {
                "source": "/recipes/:id",
                "destination": "/docs/recipes/:id"
            }
        ],
        "rewrites": [
            {
                "source": "/playground/**",
                "destination": "/playground/index.html"
            }
        ],
        "trailingSlash": false
    }
}