{
    "hosting": {
        "target": "website",
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            ".env"
        ],
        "redirects": [
            {
                "source": "/getting-started",
                "destination": "/docs/",
                "type": 301
            },
            {
                "source": "/configuration",
                "destination": "/docs/configuration",
                "type": 301
            },
            {
                "source": "/colors",
                "destination": "/docs/colors",
                "type": 301
            },
            {
                "source": "/recipes/*",
                "destination": "/examples",
                "type": 301
            },
            {
                "source": "/docs/recipes/*",
                "destination": "/examples",
                "type": 301
            }
        ],
        "rewrites": [
            {
                "source": "/playground/**",
                "destination": "/playground/index.html"
            }
        ],
        "trailingSlash": false
    }
}